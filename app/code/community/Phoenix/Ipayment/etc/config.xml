                <adminaction_password>5cfgRT34xsdedtFLdfHxj7tfwx24fe</adminaction_password>
                <invoice_text>{{store_name}} #{{order_no}}</invoice_text>
                <wsdl>https://ipayment.de/service/3.0/?wsdl</wsdl>
                <debug>0</debug>
            </ipayment_elv>            
        </payment>
        <phoenix>
            <ipayment>
